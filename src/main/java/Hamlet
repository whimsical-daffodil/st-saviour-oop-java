class Hamlet extends Shakespeare{

    public int acts;
    public int scenes;

    // constructor 
    public Hamlet (String title,boolean english, String author, int published, int acts, int scenes){
        super(title, english, author, published);
        this.acts = acts
        this.scenes = scenes
        
    }

    public void read(){
        System.out.println("You have read up to act" + acts + "and scene" + scenes + "of Hamlet");
        
    }

    public void information(){
        system.out.println(title "was published in the year" + published + "by" + author);
        system.out.println(title + "has a total of" + acts "acts, and" scenes "scenes");
    }


}